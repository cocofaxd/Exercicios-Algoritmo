#include <stdio.h>

int main() {
    double fahrenheit;  // Variável para armazenar a temperatura em Fahrenheit
    double celsius;     // Variável para armazenar a temperatura em Celsius

    // Pergunta a temperatura em Fahrenheit
    printf("Digite a temperatura em graus Fahrenheit: ");
    scanf("%lf", &fahrenheit);

    // Converte a temperatura para Celsius
    celsius = (5.0 / 9.0) * (fahrenheit - 32);

    // Imprime a temperatura em Celsius
    printf("A temperatura em graus Celsius é %.2f\n", celsius);

    return 0;
}
